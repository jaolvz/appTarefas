gerenciador_Tela:
    TelaCarregamento:
    TelaInicial:
    CriarLista:
    VizualizarLista:
    Lista:




<Lista>
    name:"lista"
    MDLabel:
        id:nomeLista
        text:""
        halign:'center'
        pos_hint: {"center_y": .95}


    MDIconButton:
        icon: "arrow-left-bold"
        pos_hint: {"center_x": .1, "center_y": .95}
        on_release:
            app.root.current = "vizualizar_lista"
            root.manager.transition.direction="right"

    MDLabel:
        text:'Feito por @jaolvz'
        halign:'center'
        theme_text_color:'Custom'
        text_color:'grey'
        pos_hint:{'center_y':0.05}
        font_name:"fonts/Akira Expanded Demo.otf"
        font_size:'10sp'




<TelaCarregamento>
    name:"tela_carregamento"
    Image:
        source:"imagens/logo_carregamento.png"
        pos_hint: {"center_x": .5, "center_y": .1}
        size_hint: .7,.7


    MDLabel:
        text:"Listas"
        halign:'center'
        font_size: '40sp'
        pos_hint:{'center_y':0.55}
        font_name:"fonts/Akira Expanded Demo.otf"





<VizualizarLista>
    name:"vizualizar_lista"

    MDIconButton:
        icon: "arrow-left-bold"
        pos_hint: {"center_x": .1, "center_y": .95}
        on_release:
            app.root.current = "tela_inicial"
            root.manager.transition.direction="right"

    MDLabel:
        text:'Selecione uma lista j√° existente'
        halign:'center'
        pos_hint: {'center_y': .95}

    MDScrollView:

        size_hint:.8,.8
        pos_hint: {"center_x": .5, "center_y": .5}
        MDList:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1  # Cor da borda (preto)
                Line:
                    width:  2 # Espessura da borda
                    rectangle: self.x, self.y, self.width, self.height
            id: container
    MDLabel:
        text:'Feito por @jaolvz'
        halign:'center'
        theme_text_color:'Custom'
        text_color:'grey'
        pos_hint:{'center_y':0.05}
        font_name:"fonts/Akira Expanded Demo.otf"
        font_size:'10sp'



<CriarLista>
    name:"criar_lista"

    MDIconButton:
        icon: "arrow-left-bold"
        pos_hint: {"center_x": .1, "center_y": .95}
        on_release:
            app.root.current = "tela_inicial"
            root.manager.transition.direction="right"

    MDLabel:
        text:'Criar nova lista'
        halign:'center'
        pos_hint:{'center_y':0.95}


    MDTextField:
        id: nome_lista
        hint_text:"Nome da lista"
        pos_hint: {'center_x': .5,'center_y': .8}
        size_hint_x:0.8

    MDTextField:
        id: text_field_Item
        hint_text:'Adicione um item'
        pos_hint: {'center_x': .5,'center_y': .65}
        size_hint_x:0.5
        mode:'rectangle'

    MDTextField:
        id: text_field_Quantidade
        hint_text:'Quantidade'
        pos_hint: {'center_x': .5,'center_y': .475}
        size_hint_x:0.5
        mode:'rectangle'

    MDRaisedButton:
        text: "Adicionar"
        md_bg_color: 0,0,0,1
        size_hint_x:0.2
        pos_hint: {'center_x': .5,'center_y': .3}
        on_release: root.btn_AdicionarItens()

    MDRaisedButton:
        text:"Criar Lista"
        md_bg_color: 0,0,0,1
        pos_hint: {'center_x': .5,'center_y': .15}
        on_release: root.criar_tabela()

    MDLabel:
        text:'Feito por @jaolvz'
        halign:'center'
        theme_text_color:'Custom'
        text_color:'grey'
        pos_hint:{'center_y':0.05}
        font_name:"fonts/Akira Expanded Demo.otf"
        font_size:'10sp'





<TelaInicial>
    name: 'tela_inicial'

    MDLabel:
        text: 'Listas'
        halign:"center"
        pos_hint: {'center_y': .85}
        font_name:"fonts/Akira Expanded Demo.otf"
        font_size: '30sp'




    MDRaisedButton:
        text :'Listas Criadas'
        size_hint_x:0.2
        pos_hint: {'center_x': .5,'center_y': .6}
        md_bg_color: 0,0,0,1
        on_release: app.root.current = "vizualizar_lista"

    MDRaisedButton:
        text : 'Criar nova lista'
        size_hint_x:0.2
        md_bg_color: 0,0,0,1
        pos_hint: {'center_x': .5,'center_y': .4}
        on_release: app.root.current = "criar_lista"



    MDLabel:
        text:'Feito por @jaolvz'
        halign:'center'
        theme_text_color:'Custom'
        text_color:'grey'
        pos_hint:{'center_y':0.05}
        font_name:"fonts/Akira Expanded Demo.otf"
        font_size:'10sp'
